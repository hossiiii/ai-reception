# OpenAI Realtime API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-10-01

# Realtime API Feature Flags
REALTIME_ENABLED=false
REALTIME_FALLBACK_ENABLED=true
REALTIME_DEBUG_MODE=false
REALTIME_LOG_LEVEL=INFO

# Audio Configuration
REALTIME_AUDIO_FORMAT=pcm16
REALTIME_SAMPLE_RATE=24000
REALTIME_CHANNELS=1
REALTIME_CHUNK_SIZE=1024

# Session Management
REALTIME_SESSION_TIMEOUT=300
REALTIME_MAX_CONCURRENT_SESSIONS=10
REALTIME_SESSION_CLEANUP_INTERVAL=60

# Performance Settings
REALTIME_AUDIO_BUFFER_SIZE=8192
REALTIME_RESPONSE_TIMEOUT=30
REALTIME_CONNECTION_TIMEOUT=10
REALTIME_RETRY_ATTEMPTS=3
REALTIME_RETRY_DELAY=1

# Database Configuration
REALTIME_DB_PATH=./data/realtime.db
REALTIME_METRICS_ENABLED=true
REALTIME_METRICS_RETENTION_DAYS=30

# Hybrid Mode Configuration
HYBRID_MODE_ENABLED=true
LANGGRAPH_FALLBACK_ENABLED=true
VOICE_ACTIVITY_DETECTION=true
SILENCE_THRESHOLD_MS=2000

# Development Settings
REALTIME_MOCK_MODE=false
REALTIME_TEST_MODE=false
REALTIME_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000